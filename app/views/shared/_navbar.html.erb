<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= cl_image_tag("ausyzhn4talln8qmux8n.png", :quality=>100, :crop=>"scale") %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->
    <%= link_to "Home", cocktails_path, class: "navbar-wagon-item navbar-wagon-link" %>
